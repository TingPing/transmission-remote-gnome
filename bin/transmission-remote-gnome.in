import os
import sys
import signal
import gettext

sys.path.insert(1, '@pythondir@')

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'
builddir = os.environ.get('MESON_BUILD_ROOT')
if builddir:
	pkgdatadir = os.path.join(builddir, 'data')
	os.environ['GSETTINGS_SCHEMA_DIR'] = pkgdatadir
	sys.dont_write_bytecode = True
	sys.path.insert(1, os.environ['MESON_SOURCE_ROOT'])

signal.signal(signal.SIGINT, signal.SIG_DFL)

gettext.install('trg', localedir)

if __name__ == '__main__':
	from gi.repository import Gio
	resource = Gio.Resource.load(os.path.join(pkgdatadir, 'se.tingping.Trg.gresource'))
	resource._register()

	from trg import application
	app = application.Application(version=VERSION)
	sys.exit(app.run(sys.argv))

import sys
import signal
import gettext
from os import path

from gi.repository import Gio

signal.signal(signal.SIGINT, signal.SIG_DFL)

gettext.bindtextdomain('trg', '@localedir@')
gettext.textdomain('trg')

srcdir = path.abspath(path.join(path.dirname(__file__), '..'))
if path.exists(path.join(srcdir, 'configure.ac')):
    pkgdatadir = srcdir
else:
	pkgdatadir = '@pkgdatadir@'

resource = Gio.resource_load(path.join(pkgdatadir, 'trg.gresource'))
Gio.Resource._register(resource)

from .application import Application
app = Application(version='@VERSION@')
sys.exit(app.run(sys.argv))
